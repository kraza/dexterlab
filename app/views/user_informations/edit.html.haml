.row
  .span13.textAlignCenter
    %h3 Account Information

  .span3.fltrgt
    = link_to 'Change Password', edit_user_registration_path, :class => "btn primary"
%br
= form_for :account,  @user_information  do |f|
  .input.field.span8
    = f.error_messages
  .input.field
    = f.label :user_name
    = f.text_field :user_name
  .input.field
    = f.label :salutation
    = f.select :salutation, Patient::INITIAL_NAME
  .input.field
    = f.label :first_name
    = f.text_field :first_name
  .input.field
    = f.label :last_name
    = f.text_field :last_name
  .input.field
    = f.label :address
    = f.text_field :address
  .input.field
    = f.label :phone
    = f.text_field :phone
  .input.field
    = f.label :city
    = f.text_field :city
  .input.field
    = f.label :state
    = f.text_field :state
  .input.field
    = f.label :country
    = f.text_field :country
  .input.field
    = f.label :zipcode
    = f.text_field :zipcode
  %br
  .ui-dialog-buttonpane.ui-helper-
    .ui-dialog-buttonset.textAlignCenter
      = f.submit 'Save', :class => 'btn primary'
      or
      = link_to 'Cancel', root_path
