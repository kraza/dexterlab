%tr
  %td= account_row_counter + 1
  %td= account_row.created_at.strftime("%B")
  %td= date_format(account_row.updated_at)
  %td= display_amount_based_on_payment_status(account_row.dues_amount)
  %td= number_to_currency(account_row.paid_amount, :unit => "Rs: ")
  %td= display_amount_based_on_payment_status(account_row.dues)